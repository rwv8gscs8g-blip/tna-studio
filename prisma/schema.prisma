generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  ADMIN
  MODEL
  CLIENT
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  passwordHash String
  role         Role     @default(MODEL)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  // Relações
  galleries    Gallery[]
  ownedRights  ImageRights[] @relation("PhotoOwner")
  galleryAccess GalleryAccess[]
}

model Gallery {
  id          String   @id @default(cuid())
  title       String
  description String?
  userId      String
  isPrivate   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relações
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  photos      Photo[]
  access      GalleryAccess[]
  
  @@index([userId])
}

model Photo {
  id          String   @id @default(cuid())
  key         String   @unique // Path no storage (ex: "cpf-12345678901/session-001/photo-001.jpg")
  title       String?
  mimeType    String
  bytes       Int      // Tamanho em bytes
  galleryId   String
  isSensitive Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relações
  gallery     Gallery  @relation(fields: [galleryId], references: [id], onDelete: Cascade)
  rights      ImageRights?
  
  @@index([galleryId])
  @@index([key])
}

model ImageRights {
  id            String    @id @default(cuid())
  photoId       String    @unique
  ownerId       String    // User que possui os direitos
  hasUsageRights Boolean  @default(false)
  allowedRoles  Role[]    // Roles permitidos (ADMIN sempre tem acesso)
  allowedUsers  String[]  // IDs de usuários específicos permitidos
  expiresAt     DateTime? // Expiração opcional
  metadata      String?   // JSON com termos, restrições, etc.
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relações
  photo         Photo     @relation(fields: [photoId], references: [id], onDelete: Cascade)
  owner         User      @relation("PhotoOwner", fields: [ownerId], references: [id])
  
  @@index([ownerId])
}

model GalleryAccess {
  id        String   @id @default(cuid())
  galleryId String
  granteeId String  // User que recebe acesso
  canDownload Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relações
  gallery   Gallery  @relation(fields: [galleryId], references: [id], onDelete: Cascade)
  grantee   User     @relation(fields: [granteeId], references: [id], onDelete: Cascade)
  
  @@unique([galleryId, granteeId])
  @@index([granteeId])
}
